# Contributor: Christoph Zeiler <archNOSPAM_at_moonblade.dot.org>

pkgname=spring
pkgver=0.80.4.2
pkgrel=1
pkgdesc='A free 3D real-time-strategy (RTS) game engine'
arch=('i686' 'x86_64')
url="http://springrts.com/"
license=('GPL')
depends=('openal' 'glew' 'boost' 'devil' 'libvorbis')
makedepends=('make' 'cmake>=2.6' 'zip' 'tar' 'lzma-utils')
source=(http://downloads.sourceforge.net/sourceforge/springrts/${pkgname}_${pkgver}_src.tar.lzma)
md5sums=('4c67e82316b282e313b84a1f48b6e90d')

build() {
    bsdtar -xf ${pkgname}_${pkgver}_src.tar.lzma || return 1

    cd spring_$pkgver

    cmake	. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DDATADIR=share/spring

    make || return 1
    make DESTDIR=$pkgdir install || return 1

    install -d $pkgdir/etc/spring
    echo '$HOME/.spring' > $pkgdir/etc/spring/datadir
}
